<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:layout_marginTop="5dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/rl_jam"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp" >

                <ImageView
                    android:id="@+id/iv_jam"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/jam_seletor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_jam"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="堵车" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_accident"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp" >

                <ImageView
                    android:id="@+id/iv_accident"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/accident_seletor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/iv_accident"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="事故" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_construction"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp" >

                <ImageView
                    android:id="@+id/iv_construction"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/construction_seletor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/iv_construction"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="施工" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_police"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp" >

                <ImageView
                    android:id="@+id/iv_police"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/police_seletor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/iv_police"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="执法" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_control"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp" >

                <ImageView
                    android:id="@+id/iv_control"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/control_seletor"
                    android:text="管制" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/iv_control"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="管制" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_ponding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp" >

                <ImageView
                    android:id="@+id/iv_ponding"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ponding_seletor"
                    android:text="积水" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@id/iv_ponding"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="积水" />
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <EditText
        android:id="@+id/et_markerinfo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/et"
        android:gravity="left|top"
        android:hint="文字描述"
        android:inputType="textMultiLine" />

    <RelativeLayout
        android:id="@+id/llouyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" >

        <Button
            android:id="@+id/bt_report"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:background="#9A9CFF"
            android:text="发表"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/bt_addphoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/bt_report"
            android:background="#D4D4D4"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="添加照片"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

</LinearLayout>